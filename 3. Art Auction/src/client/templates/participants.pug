doctype html
html
	head
		meta(charset='utf-8')
		title Participants
		link(rel='stylesheet', href='./css/style.css')
		script(src = 'https://code.jquery.com/jquery-3.5.1.min.js' defer)
		script(src = './js/app.min.js' defer)
	body
		div(class="outer")
			include header
			div(class="content participants-block")
				form(class="center" id="AddParticipantForm")
					div
						label Name
						br
						input(id="NewParticipantNameInput" type="text" required)
					| 
					div
						label Wealth
						br
						input(id="NewParticipantWealthInput" type="number" required)
					br
					span(id="AddNewParticipantButton" class="button add-new-participant-btn")
						| Add new participant
			table(style="margin: auto" id="ParticipantsTable")
		div(id="ParticipantModalBackground" class="modalBack") 
			div(class="modalContent")
				div(class="modalHeader")
					span(id="ParticipantModalClose" class="modalCloseButton") &times
					h2 Participant info
				div(class="modalBody")
					form(id="ParticipantModalForm" style="text-align: center;")
						div()
							label Name
							br
							input(id="ParticipantModalName" type="text" required)
						div
							label Wealth
							br
							input(id="ParticipantModalWealth" type="number" required)
					div
						button(id="ParticipantModalSave" class="general-btn") Save
						button(id="ParticipantModalDelete" class="general-btn") Delete
